{
  "name": "@digitsoft-ai/mobile",
  "version": "1.0.0",
  "main": "expo-router/entry",
  "private": true,
  "description": "DigitSoft AI Mobile App - React Native (Expo)",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "build:android": "eas build --platform android",
    "build:ios": "eas build --platform ios",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "clean": "expo start --clear"
  },
  "dependencies": {
    "@digitsoft-ai/shared-types": "workspace:*",
    "expo": "^51.0.0",
    "expo-router": "^3.5.0",
    "expo-status-bar": "^1.12.0",
    "react": "18.2.0",
    "react-native": "0.74.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@types/react": "^18.2.0",
    "@types/react-native": "^0.72.0",
    "typescript": "^5.3.0",
    "eslint": "^8.50.0",
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
